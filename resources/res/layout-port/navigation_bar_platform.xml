                    <com.xiaopeng.systemui.ui.widget.NavigationItemView android:id="@+id/left2" android:background="@drawable/bg_navbar_item" style="@style/NavigationItemView.Horizontal"/>
                    <com.xiaopeng.systemui.ui.widget.NavigationItemView android:id="@+id/left1" android:background="@drawable/bg_navbar_item" android:layout_marginLeft="@dimen/navbar_item_margin" style="@style/NavigationItemView.Horizontal"/>
                </com.xiaopeng.systemui.ui.widget.AlphaOptimizedLinearLayout>
            </com.xiaopeng.systemui.ui.widget.AlphaOptimizedLinearLayout>
            <com.xiaopeng.systemui.ui.widget.AlphaOptimizedRelativeLayout android:id="@+id/hvac_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true">
                <com.xiaopeng.systemui.ui.widget.AnimatedImageView android:id="@+id/hvac_quality_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bg_navbar_hvac_quality" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>

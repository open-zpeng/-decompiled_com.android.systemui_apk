<?xml version="1.0" encoding="utf-8"?>
<com.xiaopeng.systemui.ui.window.NavigationBarWindow xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">

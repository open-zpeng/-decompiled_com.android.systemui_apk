            <com.xiaopeng.systemui.ui.widget.AlphaOptimizedLinearLayout android:orientation="horizontal" android:id="@+id/left_container" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/navbar_item_margin_border" android:layout_alignParentLeft="true">

<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:interpolator="@android:anim/accelerate_interpolator" android:duration="100" android:valueFrom="1" android:valueTo="0.9" android:propertyName="scaleX"/>
            <objectAnimator android:interpolator="@android:anim/accelerate_interpolator" android:duration="100" android:valueFrom="1" android:valueTo="0.9" android:propertyName="scaleY"/>
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:interpolator="@android:anim/accelerate_interpolator" android:duration="100" android:valueFrom="0.9" android:valueTo="1" android:propertyName="scaleX"/>
            <objectAnimator android:interpolator="@android:anim/accelerate_interpolator" android:duration="100" android:valueFrom="0.9" android:valueTo="1" android:propertyName="scaleY"/>
        </set>
    </item>
</selector>

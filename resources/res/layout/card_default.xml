        <com.xiaopeng.systemui.infoflow.theme.AnimatedTextView android:theme="@style/defaultFontTheme" android:textSize="@dimen/cardTitleSize" android:textColor="@color/inf_colorTitle" android:id="@+id/tv_title" android:layout_width="@dimen/card_title_width" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/card_title_margin_left" android:layout_marginTop="@dimen/card_title_margin_top" android:singleLine="true" android:requiresFadingEdge="horizontal"/>
        <com.xiaopeng.systemui.infoflow.theme.AnimatedTextView android:theme="@style/defaultFontTheme" android:textSize="@dimen/cardDesSize" android:textColor="@color/colorDesContent" android:id="@+id/tv_des" android:layout_width="@dimen/card_title_width" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/card_des_margin_left" android:layout_marginTop="@dimen/card_des_margin_top" android:singleLine="true"/>
        <com.xiaopeng.systemui.infoflow.theme.AnimatedImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/card_type_icon_margin_top" android:layout_marginRight="@dimen/card_type_icon_margin_left" android:src="@drawable/ic_card_small_enter" android:layout_alignParentRight="true"/>
        <ImageView android:id="@+id/img_app_icon" android:visibility="gone" android:layout_width="@dimen/notification_app_icon_size" android:layout_height="@dimen/notification_app_icon_size" android:layout_marginTop="@dimen/notification_app_icon_margin_top" android:layout_marginRight="@dimen/notification_app_icon_margin_right" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:visibility="gone" android:layout_width="@dimen/card_content_width" android:layout_height="@dimen/card_height" android:layout_centerInParent="true"/>
</com.xiaopeng.systemui.infoflow.message.view.CardView>

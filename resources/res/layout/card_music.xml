        <com.xiaopeng.systemui.infoflow.theme.AnimatedImageView android:id="@+id/btn_collect" android:visibility="gone" android:layout_width="112dp" android:layout_height="112dp" android:layout_marginTop="69dp" android:layout_marginRight="47dp" android:layout_alignParentRight="true"/>

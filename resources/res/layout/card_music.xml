    <ProgressBar android:id="@+id/progressBar_music" android:background="@drawable/bg_progress_music_none" android:visibility="invisible" android:layout_width="464dp" android:layout_height="6dp" android:layout_marginTop="212dp" android:max="100" android:progress="0" android:progressDrawable="@drawable/bg_progress_music" android:layout_centerHorizontal="true" style="?android:attr/progressBarStyleHorizontal"/>
    <com.xiaopeng.systemui.infoflow.theme.AlphaOptimizedLinearLayout android:orientation="horizontal" android:id="@+id/split_action_view" android:background="@drawable/bg_music_card_bottom_action" android:layout_width="480dp" android:layout_height="64dp" android:layout_marginBottom="30dp" android:layout_alignParentBottom="true" android:layout_centerInParent="true">
        <com.xiaopeng.systemui.infoflow.theme.AnimatedImageView android:id="@+id/img_music_action_pre" android:background="@drawable/bg_btn_music_selector" android:clickable="true" android:layout_width="152dp" android:layout_height="match_parent" android:src="@drawable/ic_action_last" android:scaleType="center"/>
        <com.xiaopeng.systemui.infoflow.theme.AnimatedImageView android:id="@+id/img_music_action_pause" android:background="@drawable/bg_btn_music_selector" android:clickable="true" android:layout_width="152dp" android:layout_height="match_parent" android:layout_marginLeft="12dp" android:src="@drawable/ic_action_play" android:scaleType="center"/>
        <com.xiaopeng.systemui.infoflow.theme.AnimatedImageView android:id="@+id/img_music_action_next" android:background="@drawable/bg_btn_music_selector" android:clickable="true" android:layout_width="152dp" android:layout_height="match_parent" android:layout_marginLeft="12dp" android:src="@drawable/ic_action_next" android:scaleType="center"/>
    </com.xiaopeng.systemui.infoflow.theme.AlphaOptimizedLinearLayout>
</com.xiaopeng.systemui.infoflow.message.view.CardView>

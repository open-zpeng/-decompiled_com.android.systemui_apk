            <com.xiaopeng.systemui.infoflow.theme.AnimatedTextView android:theme="@style/defaultFontTheme" android:textSize="@dimen/cardDesSize" android:textColor="@color/colorDesContent" android:ellipsize="none" android:id="@+id/tv_des" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:requiresFadingEdge="horizontal"/>
        </com.xiaopeng.systemui.infoflow.theme.AlphaOptimizedLinearLayout>
        <com.xiaopeng.systemui.infoflow.theme.AnimatedTextView android:theme="@style/defaultFontTheme" android:textSize="@dimen/cardDesSize" android:textColor="@color/colorDesContent" android:id="@+id/tv_sub_des" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/card_sub_des_margin_left" android:layout_marginTop="@dimen/card_sub_des_margin_top" android:singleLine="true"/>
        <com.xiaopeng.systemui.infoflow.theme.AnimatedImageView android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/card_type_icon_margin_top" android:layout_marginRight="@dimen/card_type_icon_margin_left" android:src="@drawable/ic_card_media_small_down" android:layout_alignParentRight="true"/>

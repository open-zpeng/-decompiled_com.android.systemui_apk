        <com.xiaopeng.systemui.infoflow.widget.MusicDayBgImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@mipmap/bg_card_origin"/>
        <com.xiaopeng.systemui.infoflow.widget.MusicBlurImageView android:id="@+id/img_background" android:visibility="gone" android:layout_width="500dp" android:layout_height="298dp" android:layout_marginLeft="44dp" android:layout_marginTop="10dp" android:src="@mipmap/bg_card_radio" android:scaleType="fitXY"/>
        <com.xiaopeng.systemui.infoflow.widget.MusicBlurImageView android:visibility="gone" android:layout_width="500dp" android:layout_height="298dp" android:layout_marginLeft="44dp" android:layout_marginTop="10dp" android:src="@drawable/bg_card_music_cover" android:scaleType="fitXY"/>
    </RelativeLayout>
    <com.xiaopeng.systemui.infoflow.theme.AnimatedImageView android:id="@+id/img_selected" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/bg_card_chosen" android:layout_centerInParent="true"/>
    <com.xiaopeng.systemui.infoflow.theme.AnimatedImageView android:id="@+id/img_open_indicator" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:src="@mipmap/ic_card_open_indicator" android:layout_centerVertical="true"/>
    <RelativeLayout android:id="@+id/card_content" android:layout_width="@dimen/card_content_width" android:layout_height="match_parent" android:layout_centerInParent="true">

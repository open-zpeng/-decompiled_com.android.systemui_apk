            <com.xiaopeng.systemui.infoflow.aissistant.MsgIconView android:id="@+id/iv_ai_senses" android:layout_width="140dp" android:layout_height="140dp" android:layout_marginTop="@dimen/ai_push_iv_senses_margin_top" android:layout_marginRight="@dimen/ai_push_iv_senses_margin_right" android:layout_alignParentRight="true"/>
            <com.xiaopeng.systemui.infoflow.theme.AnimatedTextView android:theme="@style/defaultFontTheme" android:textSize="@dimen/ai_push_tv_title_1_text_size" android:textColor="@color/colorAiPushTitle1" android:id="@+id/tv_ai_title_1" android:visibility="visible" android:layout_width="@dimen/ai_push_tv_title_1_width" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ai_push_tv_title_1_margin_left" android:layout_marginTop="@dimen/ai_push_tv_title_1_margin_top" android:singleLine="true"/>
            <com.xiaopeng.systemui.infoflow.theme.AnimatedTextView android:theme="@style/defaultFontTheme" android:textSize="@dimen/ai_push_tv_title_2_text_size" android:textColor="@color/colorAiPushTitle2" android:ellipsize="end" android:id="@+id/tv_ai_title_2" android:visibility="visible" android:layout_width="@dimen/ai_push_tv_title_1_width" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ai_push_tv_title_2_margin_left" android:layout_marginTop="@dimen/ai_push_tv_title_2_margin_top" android:maxLines="2" android:lineSpacingExtra="-3dp"/>
            <com.xiaopeng.systemui.infoflow.theme.AnimatedTextView android:theme="@style/defaultFontTheme" android:textSize="@dimen/ai_push_tv_title_2_text_size" android:textColor="@color/colorAiPushTitle2" android:ellipsize="end" android:id="@+id/tv_ai_title_3" android:visibility="gone" android:layout_width="@dimen/ai_push_tv_title_1_width" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ai_push_tv_title_2_margin_left" android:layout_marginTop="@dimen/ai_push_tv_title_1_margin_top" android:maxLines="3"/>
            <com.xiaopeng.systemui.infoflow.theme.AnimatedTextView android:theme="@style/defaultFontTheme" android:textSize="@dimen/ai_push_btn_ok_text_size" android:textColor="#fff2f3f5" android:gravity="center" android:id="@+id/btn_ai_ok" android:background="@drawable/ai_push_bg_btn_ok" android:visibility="visible" android:layout_width="240dp" android:layout_height="96dp" android:text="好的" android:layout_alignParentBottom="true"/>

        <com.xiaopeng.systemui.infoflow.theme.AnimatedImageView android:id="@+id/img_background" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@mipmap/bg_card_origin"/>
    </RelativeLayout>
    <com.xiaopeng.systemui.infoflow.theme.AnimatedImageView android:id="@+id/img_selected" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/bg_card_chosen" android:layout_centerInParent="true"/>
    <RelativeLayout android:id="@+id/card_content" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="500dp" android:layout_height="298dp" android:layout_marginTop="10dp" android:layout_centerHorizontal="true">
            <com.xiaopeng.systemui.infoflow.theme.AnimatedImageView android:id="@+id/bg_ai_push" android:background="@drawable/ai_push_card_bg" android:layout_width="match_parent" android:layout_height="match_parent"/>

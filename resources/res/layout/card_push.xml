                <com.xiaopeng.systemui.infoflow.theme.AlphaOptimizedLinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/ai_push_bg_not_tip" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginTop="82dp" android:layout_marginRight="12dp" android:layout_alignParentRight="true">

                    <com.xiaopeng.systemui.infoflow.theme.AnimatedTextView android:theme="@style/defaultFontTheme" android:textSize="@dimen/ai_push_tv_not_tip_text_size" android:textColor="@color/colorAiPushNotTip" android:gravity="center" android:id="@+id/tv_not_tip_seven_day" android:background="@drawable/ai_push_selector_btn_not_tip" android:layout_width="@dimen/ai_push_tv_not_tip_width" android:layout_height="64dp" android:text="@string/ai_push_not_tip_7_day"/>
                    <com.xiaopeng.systemui.infoflow.theme.AnimatedImageView android:id="@+id/v_not_tip_day_line" android:background="@color/colorAiPushNotTipLine" android:layout_width="200dp" android:layout_height="2dp"/>
                    <com.xiaopeng.systemui.infoflow.theme.AnimatedTextView android:theme="@style/defaultFontTheme" android:textSize="@dimen/ai_push_tv_not_tip_text_size" android:textColor="@color/colorAiPushNotTip" android:gravity="center" android:id="@+id/tv_not_tip_all_day" android:background="@drawable/ai_push_selector_btn_not_tip" android:layout_width="@dimen/ai_push_tv_not_tip_width" android:layout_height="64dp" android:text="@string/ai_push_not_tip_all_day"/>
                </com.xiaopeng.systemui.infoflow.theme.AlphaOptimizedLinearLayout>
            </com.xiaopeng.systemui.infoflow.theme.AlphaOptimizedRelativeLayout>
            <FrameLayout android:id="@+id/btn_ai_not_tip_down" android:visibility="gone" android:layout_width="98dp" android:layout_height="98dp" android:layout_alignParentRight="true">
                <com.xiaopeng.systemui.infoflow.theme.AnimatedImageView android:layout_gravity="right" android:background="@drawable/ai_push_btn_bg_not_tip" android:layout_width="56dp" android:layout_height="56dp" android:layout_marginTop="@dimen/ai_push_btn_not_tip_margin_top" android:layout_marginRight="@dimen/ai_push_btn_not_tip_margin_right"/>
            </FrameLayout>
            <FrameLayout android:id="@+id/btn_ai_not_tip_up" android:visibility="gone" android:layout_width="98dp" android:layout_height="98dp" android:layout_alignParentRight="true">
                <com.xiaopeng.systemui.infoflow.theme.AnimatedImageView android:layout_gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ai_push_btn_not_tip_margin_top" android:layout_marginRight="@dimen/ai_push_btn_not_tip_margin_right" android:src="@drawable/ai_push_btn_bg_not_tip" android:rotation="180"/>
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:visibility="gone" android:layout_width="@dimen/card_content_width" android:layout_height="@dimen/card_height" android:layout_centerInParent="true"/>
</com.xiaopeng.systemui.infoflow.message.view.CardView>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/bg_control"/>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:topLeftRadius="28dp" android:topRightRadius="28dp" android:bottomLeftRadius="28dp" android:bottomRightRadius="28dp"/>
                <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp"/>
                <gradient android:startColor="@android:color/transparent" android:endColor="@android:color/transparent" android:angle="90" android:centerX="0.75" android:centerColor="@android:color/transparent"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip android:gravity="bottom" android:clipOrientation="vertical">
            <shape>
                <corners android:topLeftRadius="36dp" android:topRightRadius="36dp" android:bottomLeftRadius="36dp" android:bottomRightRadius="36dp"/>
                <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp"/>
                <gradient android:startColor="@color/colorProgress" android:endColor="@color/colorProgress" android:angle="90" android:centerX="0.75" android:centerColor="@color/colorProgress"/>
            </shape>
        </clip>
    </item>
</layer-list>

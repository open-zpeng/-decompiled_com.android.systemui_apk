<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:id="@android:id/background" android:drawable="@drawable/ic_sysbar_battery_0"/>
            <item android:id="@android:id/progress" android:left="@dimen/battery_progress_left" android:top="@dimen/battery_progress_top" android:right="@dimen/battery_progress_right" android:bottom="@dimen/battery_progress_bottom">
                <scale android:scaleWidth="100%">
                    <shape android:shape="rectangle">
                        <corners android:radius="2dp"/>
                        <solid android:color="@color/color_battery_state_selector"/>
                    </shape>
                </scale>
            </item>
        </layer-list>
    </item>
</selector>

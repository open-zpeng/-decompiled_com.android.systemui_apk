<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/x_bg_list_radius"/>
            <solid android:color="@color/x_theme_bg_list_pressed_start"/>
            <stroke android:width="4dp" android:color="@color/x_theme_primary_normal"/>
        </shape>
    </item>
    <item android:state_checked="true" android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/x_bg_list_radius"/>
            <solid android:color="@color/x_theme_bg_list_pressed_start"/>
            <stroke android:width="4dp" android:color="@color/x_theme_primary_normal"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/x_bg_list_radius"/>
            <solid android:color="@color/x_theme_bg_list_pressed_start"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/x_bg_list_radius"/>
            <solid android:color="@color/x_theme_bg_list_focus_start"/>
            <stroke android:width="4dp" android:color="@color/x_theme_primary_normal"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <corners android:radius="@dimen/x_bg_list_radius"/>
            <solid android:color="@color/x_theme_bg_list_focus_start"/>
            <stroke android:width="4dp" android:color="@color/x_theme_primary_normal"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/x_bg_list_radius"/>
            <solid android:color="@color/x_theme_bg_list_disable_start"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/x_bg_list_radius"/>
            <solid android:color="@color/x_theme_bg_list_normal_start"/>
        </shape>
    </item>
</selector>

                    <com.xiaopeng.systemui.ui.widget.NavigationItemView android:id="@+id/right2" android:layout_marginRight="46dp" style="@style/NavigationItemView.Horizontal.Defrost"/>
                    <com.xiaopeng.systemui.ui.widget.NavigationItemView android:id="@+id/right3" android:layout_marginRight="21dp" style="@style/NavigationItemView.Horizontal"/>
                </com.xiaopeng.systemui.ui.widget.AlphaOptimizedLinearLayout>
            </com.xiaopeng.systemui.ui.widget.AlphaOptimizedLinearLayout>
        </com.xiaopeng.systemui.ui.widget.AlphaOptimizedRelativeLayout>
        <com.xiaopeng.systemui.ui.widget.AlphaOptimizedRelativeLayout android:id="@+id/quick_panel_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.xiaopeng.systemui.ui.widget.AlphaOptimizedRelativeLayout android:gravity="center" android:id="@+id/navigation_bar_slider" android:layout_width="match_parent" android:layout_height="match_parent">
                <com.xiaopeng.systemui.ui.widget.AnimatedProgressBar android:id="@+id/hvac_driver_progress_bar" android:layout_width="394dp" android:layout_height="112dp" android:layout_marginLeft="20dp" android:progress="360" android:layout_alignParentLeft="true" style="@style/AnimatedProgressBar.Horizontal"/>

                    <com.xiaopeng.systemui.ui.widget.AnimatedImageView android:id="@+id/hvac_wind" android:paddingBottom="50dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_navbar_hvac_wind_cold" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>

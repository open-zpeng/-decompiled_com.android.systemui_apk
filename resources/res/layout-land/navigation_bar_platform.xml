            <com.xiaopeng.systemui.ui.widget.AlphaOptimizedLinearLayout android:gravity="left" android:orientation="horizontal" android:id="@+id/left_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true">

                    <com.xiaopeng.systemui.ui.widget.NavigationItemView android:id="@+id/left3" android:layout_marginLeft="21dp" style="@style/NavigationItemView.Horizontal"/>
                    <com.xiaopeng.systemui.ui.widget.NavigationItemView android:id="@+id/left2" android:layout_marginLeft="46dp" style="@style/NavigationItemView.Horizontal"/>
                    <com.xiaopeng.systemui.ui.widget.NavigationItemView android:id="@+id/left1" android:layout_marginLeft="46dp" style="@style/NavigationItemView.Horizontal"/>
                </com.xiaopeng.systemui.ui.widget.AlphaOptimizedLinearLayout>
            </com.xiaopeng.systemui.ui.widget.AlphaOptimizedLinearLayout>

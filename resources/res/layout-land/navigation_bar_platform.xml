                    <com.xiaopeng.systemui.ui.widget.HvacComboView android:id="@+id/driver_hvac_combo" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginHorizontal="5dp" style="@style/HvacComboView.Horizontal"/>
                </com.xiaopeng.systemui.ui.widget.AlphaOptimizedLinearLayout>
                <com.xiaopeng.systemui.ui.widget.AlphaOptimizedLinearLayout android:gravity="left" android:orientation="horizontal" android:id="@+id/passenger_touch_layout" android:layout_width="wrap_content" android:layout_height="@dimen/navbar_item_height" android:layout_marginLeft="57dp" android:layout_marginTop="@dimen/navbar_item_margin_top" android:layout_toRightOf="@+id/hvac_switch_container">
                    <com.xiaopeng.systemui.ui.widget.HvacComboView android:id="@+id/passenger_hvac_combo" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginHorizontal="5dp" style="@style/HvacComboView.Horizontal"/>
                </com.xiaopeng.systemui.ui.widget.AlphaOptimizedLinearLayout>
            </com.xiaopeng.systemui.ui.widget.AlphaOptimizedRelativeLayout>
            <com.xiaopeng.systemui.ui.widget.AlphaOptimizedLinearLayout android:gravity="right" android:orientation="horizontal" android:id="@+id/right_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
